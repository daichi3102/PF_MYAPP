<!-- app/views/fetch_ais/show.html.erb -->
<div class="flex justify-center items-start pt-8">
  <div class="card card-compact w-96 bg-base-100 shadow-xl text-center">
    <h1 class="text-3xl font-bold mb-4 text-center"><%= t('fetch_ais.show.title') %></h1>
    <div class="card-body">
      <!-- AI response -->
      <% if @fetch_ai.response.present? %>
        <% quote = @fetch_ai.response.match(/<quote>(.*?)<\/quote>/m)[1].strip rescue nil %>
        <% info = @fetch_ai.response.match(/<info>(.*?)<\/info>/m)[1].strip rescue nil %>
        
        <% if quote %>
          <div class="chat chat-start flex justify-start mb-4">
            <div class="chat-bubble bg-neutral text-white p-4 rounded-lg max-w-md" style="text-align: left; font-weight: bold;">
              <%= quote %>
            </div>
          </div>
        <% end %>

        <% if info %>
          <div class="chat chat-start flex justify-start mb-4">
            <div class="chat-bubble bg-neutral text-white p-4 rounded-lg max-w-md" style="text-align: left; font-weight: normal;">
              <%= info %>
            </div>
          </div>
        <% end %>
      <% end %>
      <!-- share -->
      <div class="chat chat-end flex justify-end">
        <div class="chat-bubble bg-secondary text-white p-4 rounded-lg max-w-md">
          <div class="mt-4">
            <%= link_to "https://twitter.com/share?url=https://wordpass-ldtw.onrender.com&text=名言の海を探索したら、この方の言葉を見つけたよ！%0a%0a#{quote}", target: '_blank', class: "btn btn-primary flex items-center justify-center gap-2" do %>
              <i class="fa-brands fa-x-twitter"></i>
              <span><%= t('fetch_ais.show.share') %></span>
            <% end %>
            <br>
            <%= link_to '名言一覧に戻る', fetch_ais_path, class: 'btn btn-neutral flex items-center justify-center gap-2 mt-2' %>
            <br>
            <%= link_to '編集', edit_fetch_ai_path(@fetch_ai), class: 'btn btn-neutral flex items-center justify-center gap-2 mt-2' %>          
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
