<div class="flex justify-center items-start min-h-screen pt-8">
  <div class="w-full md:w-2/3 bg-base-100 shadow-xl text-center mx-4 sm:mx-8">
    <h1 class="text-2xl sm:text-3xl font-bold mb-4 text-center" style="color: #00BFFF;"><%= t('fetch_ais.show') %></h1>

    <div class="card-body">
      <br>
      <!-- AI response -->
      <% if @fetch_ai.response.present? %>
        <% quote = @fetch_ai.response.match(/<quote>(.*?)<\/quote>/m)[1].strip rescue nil %>
        <% info = @fetch_ai.response.match(/<info>(.*?)<\/info>/m)[1].strip rescue nil %>

        <% if quote %>
          <div class="chat chat-start flex justify-start mb-4">
            <div class="chat-bubble bg-neutral p-4 rounded-lg max-w-full sm:max-w-md text-lg sm:text-3xl text-black" style="text-align: left; font-weight: bold;">
              <%= quote %>
            </div>
          </div>
        <% end %>

        <% if info %>
          <div class="chat chat-start flex justify-start mb-4">
            <div class="chat-bubble bg-neutral p-4 rounded-lg max-w-full sm:max-w-md text-xs sm:text-sm text-black" style="text-align: left; font-weight: normal;">
              <%= info %>
            </div>
          </div>
        <% end %>
      <% end %>

      <!-- do -->
      <div class="chat chat-end flex justify-end mt-4">
        <div class="chat-bubble bg-secondary text-white p-4 rounded-lg max-w-full sm:max-w-md">
          <div>
            <%= render 'shared/x_button', quote: quote %>
            <br>
            <%= link_to t('fetch_ais.index'), fetch_ais_path, class: 'btn btn-info flex items-center justify-center gap-2 mt-2' %>            
            <br>
            <%= link_to t('fetch_ais.new'), new_fetch_ai_path, class: 'btn btn-neutral flex items-center justify-center gap-2 mt-2' %>            
            <br>
            <%= link_to t('mypages.title'), mypage_path, class: 'btn btn-neutral flex items-center justify-center gap-2 mt-2' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
