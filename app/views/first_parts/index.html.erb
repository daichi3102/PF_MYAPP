<h1 class="text-2xl font-bold mb-4">First Parts</h1>

<% @first_parts.each do |first_part| %>
  <div class="first-part card shadow-lg p-4 mb-4">
    <h2 class="text-xl font-semibold mb-2">
      <%= first_part.content %>
    </h2>

    <div class="user-info flex items-center mt-4 space-x-4">
      <div class="avatar">
        <div class="rounded-full w-10 h-10">
          <% if first_part.user.avatar.present? %>
            <%= image_tag first_part.user.avatar.url %>
          <% else %>
            <%= image_tag 'default-avatar.png' %>
          <% end %>
        </div>
      </div>
      <span class="text-sm font-bold"><%= first_part.user.name %></span>
    </div>

    <%= link_to 'Details', make_path(first_part.make), class: 'btn btn-secondary mt-4' %>
  </div>
<% end %>
