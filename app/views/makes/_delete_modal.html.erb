<dialog id="delete_modal_<%= make.id %>" class="modal">
  <div class="modal-box w-full max-w-md p-6 text-center">
    <h2 class="text-2xl font-bold mb-4"><%= t('defaults.destroy_confirm') %></h2>
    <div class="flex justify-center mt-4 space-x-4">
      <%= button_to t('defaults.destroy'), make_path(make), method: :delete, class: 'btn btn-danger' %>
      <button class="btn btn-secondary" onclick="document.getElementById('delete_modal_<%= make.id %>').close()"><%= t('defaults.cancel') %></button>
    </div>
  </div>
</dialog>
