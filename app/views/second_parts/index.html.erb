<div class="flex justify-center items-start pt-8">
  <div class="w-2/3 text-center">
    <h1 class="text-3xl font-bold mb-4 text-center" style="color: #1E90FF;">下の句</h1>

    <br><br>
    <% @second_parts.each do |second_part| %>
      <div class="bg-base-100 shadow-xl w-auto my-2 mx-auto" style="width: 100%; max-width: 640px;">
        <div class="card-body">
          <h2 class="text-3xl font-semibold mb-2 text-center">
            <%= second_part.content %>
          </h2>

          <div class="user-info flex items-center justify-center mt-4 space-x-4">
            <div class="avatar">
              <div class="rounded-full w-10 h-10">
                <%= image_tag second_part.user.avatar.url, class: "rounded-full" %>
              </div>
            </div>
            <span class="text-sm font-bold"><%= second_part.user.name %></span>
          </div>

          <br>
          <div class="mt-4 flex justify-center space-x-4">
            <button class="btn btn-primary" onclick="document.getElementById('first_part_modal_<%= second_part.make.id %>').showModal()">上の句を作る</button>
          </div>
          <div class="mt-4">
            <%= link_to '戻る', makes_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
      <!-- モーダルをレンダリング -->
      <%= render 'first_parts/modal', make: second_part.make %>
    <% end %>
  </div>
</div>
