<header class="w-full navbar bg-neutral h-16">
  <div class="flex justify-between items-center w-full h-full">
    <!-- 左にロゴ -->
    <div class="h-full flex-shrink-0">
      <a href="<%= root_path %>" class="btn btn-ghost h-full flex items-center hover:bg-primary dark:hover:bg-primary">
        <%= image_tag '/LMO.png', alt: 'Logo', style: 'height: 100%; max-height: 100%;' %>
      </a>
    </div>

    <!-- 右にハンバーガー -->
    <div class="dropdown dropdown-end flex-none">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar h-full flex items-center hover:bg-primary dark:hover:bg-primary">
        <div class="w-10 rounded-full">
          <%= image_tag current_user.avatar_url %>
        </div>
      </div>
      <ul tabindex="0" class="menu dropdown-content z-[1] p-2 shadow bg-base-300 rounded-box w-52 mt-4">
        <li>
          <%= link_to t('header.signout'), destroy_user_session_path, method: :delete, data: { turbo_method: "delete" }, class: "btn btn-ghost hover:bg-primary focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-primary dark:focus:ring-gray-800" %>
        </li>
        <li>
          <%= link_to t('header.profile'), profile_path, class: "btn btn-ghost hover:bg-primary focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-primary dark:focus:ring-gray-800" %>
        </li>
        <li>
          <%= link_to t('header.ai'), root_path, class: "btn btn-ghost hover:bg-primary focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-primary dark:focus:ring-gray-800" %>
        </li>
        <li>
          <%= link_to t('header.ai_index'), fetch_ais_path, class: "btn btn-ghost hover:bg-primary focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-primary dark:focus:ring-gray-800" %>
        </li>
        <li>
          <%= link_to t('header.makes'), makes_path, class: "btn btn-ghost hover:bg-primary focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-primary dark:focus:ring-gray-800" %>
        </li>
        <li>
          <a href="#" class="btn btn-ghost hover:bg-primary focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2 dark:hover:bg-primary dark:focus:ring-gray-800"><%= t('header.likes') %></a>
        </li>
      </ul>
    </div>
</header>
