<div class="flex flex-col items-center">
  <h2 class="text-3xl font-bold mb-4 text-center" style="color: #00BFFF;"><%= t('.change_your_password') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "w-full max-w-xs" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field form-control mt-4">
      <%= f.label :password, t('.new_password'), class: "label" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered input-primary w-full" %>
    </div>

    <div class="field form-control mt-4">
      <%= f.label :password_confirmation, t('.confirm_new_password'), class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered input-primary w-full" %>
    </div>

    <div class="actions mt-4 flex justify-center">
      <%= f.submit t('.change_my_password'), class: "btn btn-primary w-auto" %>
    </div>
  <% end %>

  <br>
  <%= render "users/shared/links" %>
</div>
