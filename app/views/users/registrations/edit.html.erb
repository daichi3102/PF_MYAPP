<div class="flex flex-col items-center">
  <h2 class="text-3xl font-bold mb-4 text-center" style="color: #00BFFF;"><%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "w-full max-w-xs" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field form-control">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered input-primary w-full" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mt-2 text-center text-gray-600">
        <%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %>
      </div>
    <% end %>

    <div class="field form-control mt-4">
      <%= f.label :password, class: "label" %>
      <i class="text-sm text-gray-500">(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered input-primary w-full" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500 mt-2"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
    </div>

    <div class="field form-control mt-4">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered input-primary w-full" %>
    </div>

    <div class="field form-control mt-4">
      <%= f.label :current_password, class: "label" %>
      <i class="text-sm text-gray-500">(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered input-primary w-full" %>
    </div>

    <div class="actions mt-4 flex justify-center">
      <%= f.submit t('.update'), class: "btn btn-primary w-auto" %>
    </div>
  <% end %>

  <h3 class="text-xl font-bold mt-8"><%= t('.cancel_my_account') %></h3>

  <div class="mt-4 text-center text-gray-600">
    <%= t('.unhappy') %> 
    <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-secondary mt-2" %>
  </div>

  <div class="mt-4">
    <%= link_to t('devise.shared.links.back'), :back, class: "btn btn-secondary" %>
  </div>
</div>
