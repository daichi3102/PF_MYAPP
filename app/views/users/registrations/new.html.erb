<div class="flex flex-col items-center">
  <br>
  <h2 class="text-3xl font-bold mb-4 text-center" style="color: #00BFFF;"><%= t('devise.registrations.new.sign_up') %></h2>
  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-full max-w-xs" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field form-control">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input input-bordered input-primary w-full" %>
    </div>

    <div class="field form-control mt-4">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autocomplete: "email", class: "input input-bordered input-primary w-full" %>
    </div>

    <div class="field form-control mt-4">
      <%= f.label :password, class: "label" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered input-primary w-full" %>
    </div>

    <div class="field form-control mt-4">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered input-primary w-full" %>
    </div>

    <br>
    <div class="actions mt-4 flex justify-center">
      <%= f.submit t('devise.registrations.new.sign_up'), class: "btn btn-primary w-auto" %>
    </div>
  <% end %>

  <br>
  <%= render "users/shared/links" %>
</div>
