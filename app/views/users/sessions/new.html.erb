<div class="flex flex-col items-center">
  <br>
  <h1 class="text-3xl font-bold mb-4 text-center" style="color: #00BFFF;"><%= t('devise.sessions.new.sign_in') %></h1>
  <br>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full max-w-xs" }) do |f| %>
    <div class="field form-control">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input input-bordered input-primary w-full" %>
    </div>

    <div class="field form-control mt-4">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autocomplete: "email", class: "input input-bordered input-primary w-full" %>
    </div>

    <div class="field form-control mt-4">
      <%= f.label :password, class: "label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered input-primary w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-control mt-4">
        <%= f.check_box :remember_me, class: "checkbox" %>
        <%= f.label :remember_me, class: "label" %>
      </div>
    <% end %>

    <div class="actions mt-4 flex justify-center">
      <%= f.submit t('devise.sessions.new.sign_in'), class: "btn btn-primary w-auto" %>
    </div>
  <% end %>

  <br>
  <div class="actions mt-4 flex justify-center">
    <%= link_to t("devise.shared.links.sign_up"), new_registration_path(resource_name), class: "btn btn-secondary w-full max-w-xs" %>
  </div>

  <br>
  <div class="actions mt-4 flex justify-center">
    <%= render 'shared/google_buttons' %>
  </div>
  <br><br>
</div>
